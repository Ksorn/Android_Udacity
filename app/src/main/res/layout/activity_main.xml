<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f51b5"
    tools:context="com.example.android.independenceofcroatia.MainActivity">

    <!--Title -->
    <TextView
        android:id="@+id/independence_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/independence_of_croatia"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#0d47a1"
        android:textStyle="bold" />

    <!--Icon left of title-->
    <ImageView
        android:id="@+id/croatian_icon_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/croatian_shape"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/independence_text_view"
        android:src="@drawable/croatian_icon" />

    <!--Icon right of title-->
    <ImageView
        android:id="@+id/croatian_icon_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/croatian_shape"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/independence_text_view"
        android:src="@drawable/croatian_icon" />

    <!--Croatian shape image-->
    <ImageView
        android:id="@+id/croatian_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/_25_years_text_view"
        android:layout_below="@+id/independence_text_view"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/croatian_shape" />

    <!--Text: 25 years-->
    <TextView
        android:id="@+id/_25_years_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/croatia_dates_text_view"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="@string/_25_years"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#0d47a1"
        android:textStyle="bold" />

    <!--Text: 15 Jan 1992 - 15 Jan 2017-->
    <TextView
        android:id="@+id/croatia_dates_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="@string/croatia_dates"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/croatia_dates" />


</RelativeLayout>